.maincontents
  = render "products/headers"
  .bread-crumbs
    .bread-crumbs_list
      - breadcrumb :mypage
      = breadcrumbs separator: " &nbsp;&nbsp;&#12297;&nbsp; "

  .exhibit-button
    %a.exhibit
      .exhibit-contents
        .exhibit-contents__text 出品
        %svg.cameraicon{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 18 16", :width => "18"}
          %path{:d => "M6.3 0L4.653 1.778H1.8c-.99 0-1.8.8-1.8 1.778v10.666C0 15.2.81 16 1.8 16h14.4c.99 0 1.8-.8 1.8-1.778V3.556c0-.978-.81-1.778-1.8-1.778h-2.853L11.7 0H6.3zM9 13.333c-2.484 0-4.5-1.99-4.5-4.444 0-2.453 2.016-4.445 4.5-4.445s4.5 1.992 4.5 4.445c0 2.453-2.016 4.444-4.5 4.444zm0-1.6c1.59 0 2.88-1.273 2.88-2.844S10.59 6.044 9 6.044c-1.59 0-2.88 1.274-2.88 2.845 0 1.57 1.29 2.844 2.88 2.844z", :fill => "currentColor", "fill-rule" => "nonzero"}

  %main.l-container.clearfix
    .l-content
      %section.mypage-user-icon
        %a{:href => "https://www.mercari.com/jp/u/167048340/"}
          %figure
            %img{:alt => "", :height => "60", :src => "//static.mercdn.net/images/member_photo_noimage_thumb.png", :width => "60"}/
          %h2.bold Unknown
          .mypage-number
            %div
              評価
              %span.bold 0
            %div
              出品数
              %span.bold 0
      %section.mypage-tab-container-notification-todo
        %ul.mypage-tabs
          %li.active
            %h3
              %a{"data-toggle" => "tab", :href => "#mypage-tab-notification"}
                お知らせ
          %li
            %h3
              %a{"data-toggle" => "tab", :href => "#mypage-tab-todo"}
                やることリスト
        .tab-content
          %ul#mypage-tab-notification.mypage-item-list.tab-pane.active
            %li
              %a.mypage-item-link{:href => "https://www.mercari.com/jp/mypage/news/"}
                %figure
                  %img.lazyloaded{:alt => "", "data-src" => "//static.mercdn.net/images/mercari_profile.png", :src => "//static.mercdn.net/images/mercari_profile.png"}/
                .mypage-item-body
                  .mypage-item-text 事務局から個別メッセージ「Googleログイン通知」
                  %time
                    %i.far.fa-clock
                    %span 10 分前
                %i.icon-arrow-right
            %li
              %a.mypage-item-link{"data-modal" => "banner", "data-open" => "modal", :href => ""}
                %figure
                  %img.lazyloaded{:alt => "", "data-src" => "//static.mercdn.net/images/mercari_profile.png", :src => "//static.mercdn.net/images/mercari_profile.png"}/
                .mypage-item-body
                  .mypage-item-text 《速報》今なら販売手数料が実質無料！出品が超お得♪
                  %time
                    %i.far.fa-clock
                    %span 2 日前
                %i.icon-arrow-right
            %li
              %a.mypage-item-link{:href => "https://www.mercari.com/jp/mypage/news/"}
                %figure
                  %img.lazyloaded{:alt => "", "data-src" => "//static.mercdn.net/images/mercari_profile.png", :src => "//static.mercdn.net/images/mercari_profile.png"}/
                .mypage-item-body
                  .mypage-item-text 事務局から個別メッセージ「Googleログイン通知」
                  %time
                    %i.far.fa-clock
                    %span 2 日前
                %i.icon-arrow-right
            %li
              %a.mypage-item-link{"data-modal" => "banner", "data-open" => "modal", :href => ""}
                %figure
                  %img.lazyloaded{:alt => "", "data-src" => "//static.mercdn.net/images/mercari_profile.png", :src => "//static.mercdn.net/images/mercari_profile.png"}/
                .mypage-item-body
                  .mypage-item-text 《今なら販売手数料実質無料！》詳しくはこちらから♪
                  %time
                    %i.far.fa-clock
                    %span 4 日前
                %i.icon-arrow-right
            %li
              %a.mypage-item-link{:href => "https://www.mercari.com/jp/mypage/news/"}
                %figure
                  %img.lazyloaded{:alt => "", "data-src" => "//static.mercdn.net/images/mercari_profile.png", :src => "//static.mercdn.net/images/mercari_profile.png"}/
                .mypage-item-body
                  .mypage-item-text 事務局から個別メッセージ「全国のセブン-イレブンでメルカリの梱包資材販売がスタートします♪」
                  %time
                    %i.far.fa-clock
                    %span 5 日前
                %i.icon-arrow-right
            %li.mypage-go-list
              %a{:href => "/jp/mypage/notification/"} 一覧を見る
          %ul#mypage-tab-todo.mypage-item-list.tab-pane
            %li.mypage-item-not-found.bold 現在、やることリストはありません
      %aside.modal{"data-close" => "modal", "data-modal" => "banner"}
        .modal-inner.modal-banner
          .modal-banner-eye-catch
            %img{:alt => "", :src => "//www-mercari-jp.akamaized.net/assets/img/common/jp/top/main_content_pc.png?2296184308"}/
            %img{:alt => "", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308"}/
          .modal-banner-body
            %h2 今すぐ無料ダウンロード！
            %p.bold 全ての機能を使えるスマホアプリはこちら！
            .modal-banner-app.clearfix
              %a.pull-left{:href => "https://itunes.apple.com/jp/app/id667861049?l=ja&mt=8", :target => "_blank"}
                %img{:alt => "", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/app-store.svg?2296184308"}/
              %a.pull-left{:href => "https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja", :target => "_blank"}
                %img{:alt => "", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/google-play.svg?2296184308"}/
            %a.modal-banner-app-open{"data-action" => "app/launch", "data-play-id" => "com.kouzoh.mercari", "data-toggle" => "open-app", "data-url-scheme" => "mercari://", :href => ""}
              アプリで開く
          %i.icon-close{"data-close" => "modal"}
      %section.mypage-tab-container
        %h2.mypage-tab-head 購入した商品
        %ul.mypage-tabs
          %li.active
            %h3
              %a{"data-toggle" => "tab", :href => "#mypage-tab-transaction-now"}
                取引中
          %li
            %h3
              %a{"data-toggle" => "tab", :href => "#mypage-tab-transaction-old"}
                過去の取引
        .tab-content
          %ul#mypage-tab-transaction-now.mypage-item-list.tab-pane.active
            %li.mypage-item-not-found.bold 取引中の商品がありません
          %ul#mypage-tab-transaction-old.mypage-item-list.tab-pane
            %li.mypage-item-not-found.bold 過去に取引した商品がありません
    .l-side
      %nav.mypage-nav
        %ul.mypage-nav-list
          %li
            %a.mypage-nav-list-item.active{:href => "/jp/mypage/"}
              マイページ
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/notification/"}
              お知らせ
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/todo/"}
              やることリスト
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/like/history/"}
              いいね！一覧
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/sell/"}
              出品する
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/listings/listing/"}
              出品した商品 - 出品中
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/listings/in_progress/"}
              出品した商品 - 取引中
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/listings/completed/"}
              出品した商品 - 売却済み
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/purchase/"}
              購入した商品 - 取引中
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/purchased/"}
              購入した商品 - 過去の取引
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/news/"}
              ニュース一覧
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/review/history/"}
              評価一覧
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/help_center/"}
              ガイド
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/support/"}
              お問い合わせ
              %i.fas.fa-chevron-right
        %h3.mypage-nav-head メルペイ
        %ul.mypage-nav-list
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/sales/"}
              売上・振込申請
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/point/"}
              ポイント
              %i.fas.fa-chevron-right
        %h3.mypage-nav-head 設定
        %ul.mypage-nav-list
          %li
            %a.mypage-nav-list-item{:href => "/profile/"}
              プロフィール
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/deliver_address/"}
              発送元・お届け先住所変更
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/card/"}
              支払い方法
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/email_password/"}
              メール/パスワード
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/identification/"}
              本人情報
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/mypage/sms_confirmation/"}
              電話番号の確認
              %i.fas.fa-chevron-right
          %li
            %a.mypage-nav-list-item{:href => "/jp/logout/"}
              ログアウト
              %i.fas.fa-chevron-right

  = render "products/app_banner"
  = render "products/footers"
