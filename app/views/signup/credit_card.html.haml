<link rel="stylesheet" href="css/normalize.css">
%html{:lang => "ja-JP"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %script{src: "https://js.pay.jp/", type: "text/javascript"}
    .single-container
      %header.single-header
        %h1
          %a{:href => "https://www.mercari.com/jp/"}
            %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3761641567"}/
        %nav.progress-bar.signup-bar
          %ol.clearfix
            %li.through
              会員情報
              .progress-status
            %li.through
              電話番号認証
              .progress-status
            %li.through
              お届け先住所入力
              .progress-status
            %li.active
              支払い方法
              .progress-status
            %li
              完了
              .progress-status
      %main.single-main
        %section.l-single-container-credit-input
          %h2.l-single-head.registration 支払方法
          %form.l-single-inner.registration-form
          = form_tag(credit_card_signup_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
            %script{src: "https://js.pay.jp/", type: "text/javascript"}
            %input{:name => "__csrf_value", :type => "hidden", :value => "7088e23ff34753755fa91a4bd357742cb0b9477a98bc9bf39fa29885088ce782622488d02d5244764a1951cd25bb0f0e3bb22c2dcaafdc3031122e0b4d1b65767"}/
            .l-single-content
              .form-group
                %label{:for => "number"} カード番号
                %span.form-require 必須
                = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "number"
                %ul.signup-card-list
                  %li
                    %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3761641567", :width => "49"}/
                  %li
                    %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3761641567", :width => "34"}/
                  %li
                    %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3761641567", :width => "30"}/
                  %li
                    %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3761641567", :width => "32"}/
                  %li
                    %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3761641567", :width => "21"}/
                  %li
                    %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3761641567", :width => "32"}/
                  %li
                    %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3761641567", :width => "32"}/

              .form-group.signup-form-expire
                %label{:for => "payment_card_expire"} 有効期限
                %span.form-require 必須
                %br/
                .select-wrap.half
                  %select#exp_month{name: "exp_month", type: "text"}
                    %option{:value => "01"} 01
                    %option{:value => "02"} 02
                    %option{:value => "03"} 03
                    %option{:value => "04"} 04
                    %option{:value => "05"} 05
                    %option{:value => "06"} 06
                    %option{:value => "07"} 07
                    %option{:value => "08"} 08
                    %option{:value => "09"} 09
                    %option{:value => "10"} 10
                    %option{:value => "11"} 11
                    %option{:value => "12"} 12
                  %i.fas.fa-chevron-down
                  %span 月
                .select-wrap.half
                  %select#exp_year{name: "exp_year", type: "text"}
                    %option{:value => "2019"} 19
                    %option{:value => "2020"} 20
                    %option{:value => "2021"} 21
                    %option{:value => "2022"} 22
                    %option{:value => "2023"} 23
                    %option{:value => "2024"} 24
                    %option{:value => "2025"} 25
                    %option{:value => "2026"} 26
                    %option{:value => "2027"} 27
                    %option{:value => "2028"} 28
                    %option{:value => "2029"} 29
                  %i.fas.fa-chevron-down
                  %span 年
                %ul#expire-mm-error-wrapper.has-error-text
                %ul#expire-yy-error-wrapper.has-error-text


              .form-group
                %label{:for => "cvc"} セキュリティコード
                %span.form-require 必須
                = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                .signup-seqcode
                  .signup-seqcode-text{"data-js" => "show-tips-toggle"}
                    %span.form-question> ?
                    カード裏面の番号とは？
                  -# .signup-seqcode-info{"data-js" => "show-tips-content"}
                  -#   カードの裏面をご参照ください。
                  -#   %br/
                  -#   %img{:alt => "", :src => "//www-mercari-jp.akamaized.net/assets/img/signup/seq-card.png?3761641567", :width => "240"}/
              #card_token
              = submit_tag "次へ進む", id: "token_submit"
              
      %footer.single-footer
        %nav
          %ul.clearfix
            %li
              %a{:href => "https://www.mercari.com/jp/privacy/"} プライバシーポリシー
            %li
              %a{:href => "https://www.mercari.com/jp/tos/"} メルカリ利用規約
            %li
              %a{:href => "https://www.mercari.com/jp/tokutei/"} 特定商取引に関する表記
        %a.single-footer-logo{:href => "https://www.mercari.com/jp/"}
          %img{:alt => "mercari", :height => "65", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3761641567", :width => "80"}/
        %p
          %small © 2019 Mercari
      = javascript_include_tag 'payjp.js'
    / Google Tag Manager