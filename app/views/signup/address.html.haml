!!!
<link rel="stylesheet" href="css/normalize.css">
%html{:lang => "ja-JP"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    .single-container
      %header.single-header
        %h1
          %a{:href => "https://www.mercari.com/jp/"}
            %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3761641567"}/
        %nav.progress-bar.signup-bar
          %ol.clearfix
            %li.through
              会員情報
              .progress-status
            %li.through
              電話番号認証
              .progress-status
            %li.active
              お届け先住所入力
              .progress-status
            %li
              支払い方法
              .progress-status
            %li
              完了
              .progress-status
      %main.single-main
        %section.l-single-container-profile
          %h2.l-single-head.registration 住所入力
          %form.l-single-inner.registration-form{:action => "https://www.mercari.com/jp/signup/sms_confirmation/", :method => "POST", :novalidate => "novalidate"}
          = form_for @profile, url: address_signup_index_path,method: :post do |f|
            %input{:name => "__csrf_value", :type => "hidden", :value => "7088e23ff34753755fa91a4bd357742cb0b9477a98bc9bf39fa29885088ce782622488d02d5244764a1951cd25bb0f0e3bb22c2dcaafdc3031122e0b4d1b65767"}/
            .l-single-content
              .form-group
                %label{:for => "post_number"} 郵便番号
                %span.form-require 必須
                = f.text_field :post_number, placeholder: '例) 1234567'
              .form-group
                %label{:for => "id"} 都道府県
                %span.form-require 必須
                = f.collection_select :id, Prefecture.all, :id, :prefecture,{prompt: "--"}, {class:"signup-form__input-default"}
                %i.fas.fa-chevron-down
              .form-group
                %label{:for => "city"} 市区町村
                %span.form-require 必須
                = f.text_field :city, placeholder: '例) 横浜市緑区'
              .form-group
                %label{:for => "house_number"} 番地
                %span.form-require 必須
                = f.text_field :house_number, placeholder: '例) 青山1-1-1'
              .form-group
                %label{:for => "building_name"} 建物名
                %span.form-require#no-need 任意
                = f.text_field :building_name, placeholder: '例) 柳ビル103'
              .form-group
                %label{:for => "tel_number"} 電話
                %span.form-require#no-need 任意
                = f.text_field :tel_number, placeholder: '例) 09012345678'
              = f.submit '次へ進む', class: 'btn-red'
      = render "signup/footer"